	<bean id="messagePreparator" class="com.ideyatech.core.mail.VelocityMimeMessagePreparator" autowire="byName" />
	<bean id="mailingUtil" class="com.ideyatech.core.util.MailingUtil" autowire="byName">
		<property name="mailSender" ref="mailSender" />
		<property name="velocityEngine" ref="velocityEngine" />
	</bean>
	<bean id="schedulerFactory" class="org.quartz.impl.StdSchedulerFactory" autowire="byName" />
	
	<!-- mail sender -->
	<bean id="mailSender"
		class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host">
			<value>${mail.server.domain}</value>
		</property>
		<property name="username">
			<value>${mail.server.username}</value>
		</property>
		<property name="password">
			<value>${mail.server.password}</value>
		</property>
		<property name="javaMailProperties">
        	<props>
	  			<prop key="mail.smtp.auth">true</prop>
	  			<!-- used by gmail smtp server -->
				<prop key="mail.smtp.starttls.enable">true</prop>
  			</props>
  		</property>
	</bean>
	
